{
  "mcpServers": {
  "fetch": {
    "command": "uvx",
      "args": ["mcp-server-fetch"]
  },
  "time": {
    "command": "uvx",
    "args": [
      "mcp-server-time",
      "--local-timezone=Asia/Tokyo"
    ]
  },
  "sequential-thinking": {
    "command": "npx",
    "args": [
      "-y",
      "@modelcontextprotocol/server-sequential-thinking"
    ]
  },
  "puppeteer": {
    "command": "npx",
    "args": ["-y", "@modelcontextprotocol/server-puppeteer"]
  }
  }
}